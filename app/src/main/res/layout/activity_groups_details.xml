<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.GroupsDetails"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="صفحة بيانات مجموعة التخرج "
            android:textSize="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="عنوان مشروع التخرج"
            android:gravity="right"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/title_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="right"
            android:hint="يرجى ادخال عنوان مختصر يوضح الهدف من المشروع"
            android:layout_marginRight="20dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اختيار مشرف للمشروع"
            android:gravity="right"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            />
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinner13"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="right"
            android:background="@drawable/form"
            app:hintText="قم بالضغط هنا لرؤية المشرفين المتاحين"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TAG"
            android:gravity="right"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/spinner255"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="right"
        android:background="@drawable/form"
        app:hintText="نوع المشروع"
        />
    <ListView
        android:id="@+id/list255"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="right"
        />

